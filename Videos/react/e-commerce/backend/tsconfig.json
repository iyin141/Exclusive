{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "." ,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"]  // Set the root directory to the current folder
  },
  "include": ["*.ts"]  // Include all .ts files in the root folder
}
